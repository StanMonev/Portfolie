  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
          "--inspect-brk",
          "${workspaceFolder}\\tests\\**\\*.test.js"
      ],
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Train Bot",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\utils\\ticTacToe\\training\\trainTTTBot.js"
    }
  ]
}