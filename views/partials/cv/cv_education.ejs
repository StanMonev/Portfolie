<label for="educationName">Name:</label>
<input type="text" id="educationName" name="educationName" placeholder="Institution Name" required>

<label for="educationDescription">Description:</label>
<textarea id="educationDescription" name="educationDescription" placeholder="Describe your education" required></textarea>

<div class="row">
  <label for="educationFrom">From:</label>
  <input type="date" id="educationFrom" name="educationFrom" required>

  <div class="tooltip">
      <input type="checkbox" id="stillStudying" name="stillStudying">
      <span class="tooltiptext">Still Studying</span>
  </div>

  <label for="educationUntil">Until:</label>
  <input type="date" id="educationUntil" name="educationUntil">
</div>

<input type="hidden" id="educationId">

<button type="button" id="addEducationButton">Add Education</button>
<button type="button" id="updateEducationButton" style="display: none;">Save</button>
<button type="button" id="resetEducationButton" style="display: none;">Reset</button>
<button type="button" id="cancelEducationButton" style="display: none;">Cancel</button>

<div id="educationList">
    <!-- Education entries will be displayed here -->
</div>
