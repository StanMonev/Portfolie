{
  "name": "portfolie-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Express and React services",
  "scripts": {
    "start:express": "cd resume-website && npm run devStart",
    "start:react": "cd blogs && npm start",
    "start": "npm-run-all --parallel start:express start:react",
    "migrate": "cd resume-website && npm run migrate"
  },
  "workspaces": [
    "blogs",
    "resume-website"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
